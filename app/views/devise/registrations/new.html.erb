<%= render "shared/header" %>

<div class="contents-row">
  <div class="container">
    <h2>会員登録ページ</h2>
    <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>

      <div class="field">
        <%= f.label :nickname, class: "hidden-label" %>
        <%= f.text_field :nickname, class:"input-default", placeholder: "Nickname", autofocus: true, maxlength: "6" %>
      </div>

      <div class="field">
        <%= f.label :email, class: "hidden-label"%>
        <%= f.email_field :email, class:"input-default", placeholder: "Email" %>
      </div>
 
      <div class="field">
        <%= f.label :password, class: "hidden-label"%>
        <%= f.password_field :password, class:"input-default", placeholder: "Password", autocomplete: "off" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, class: "hidden-label" %>
        <%= f.password_field :password_confirmation, class:"input-default", placeholder: "Password Confirmination", autocomplete: "off" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "action-button" %>
      </div>
    <% end %>
  </div>
</div>

<%= render "shared/footer" %>